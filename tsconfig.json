{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "declarationDir": "./dist/types"
  },
  "include": ["src/core/**/*"],
  "exclude": ["./dist", "./node_modules", "./src/**/*.test.tsx"]
}
