{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": ["./core/**/*"],
  "exclude": ["./dist", "./node_modules", "./core/**/*.test.tsx"]
}
